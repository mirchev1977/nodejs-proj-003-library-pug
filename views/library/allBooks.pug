extends ../layouts/main-layout

block header__title
    title Library with Pug - Home

block body
    table.all-books
        tr
            th
                a( 
                    href="?sort=title" 
                )=bookHeaders.title.toUpperCase()
            th
                a( 
                    href="?sort=author" 
                )=bookHeaders.author.toUpperCase()
            th
                a( 
                    href="?sort=issuedon" 
                )=bookHeaders.issuedon.toUpperCase()
            th Delete
            th Edit
        each book in books
            tr
                td=book.title
                td=book.author
                td=book.issuedon
                td
                    a( href=`/admin/delete?id=${book.id}` class="delete-book" ) Delete
                td
                    a( 
                        href=`/admin/edit?id=${book.id}&title=${book.title}&author=${book.author}&issuedon=${book.issuedon}`
                        class="edit-book" 
                    ) Edit
    script( src="/scripts/all-books.js" )