extends ../layouts/main-layout
block header
    head
        title Library with Pug - Home
        link(rel="stylesheet" href="styles/app.css" type="text/css")
    h1 Header - Home

block body
    table.all-books
        tr
            th=bookHeaders.id
            th=bookHeaders.title
            th=bookHeaders.author
            th=bookHeaders.issuedon
        each book in books
            tr
                td=book.id
                td=book.title
                td=book.author
                td=book.issuedon